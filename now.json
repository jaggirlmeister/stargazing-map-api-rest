{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@now/node-server"
        }
    ],
    "routes": [
        {
            "src": "/location/(?<id>[^/]+)",
            "dest": "/app.js/?id=$id",
            "methods": [
                "DELETE"
            ]
        },
        {
            "src": "/location/(?<id>[^/]+)",
            "dest": "/app.js/?id=$id",
            "methods": [
                "PUT"
            ]
        },
        {
            "src": "/locations",
            "dest": "/app.js",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/locations",
            "dest": "/app.js",
            "methods": [
                "POST"
            ]
        },
        {
            "src": "/",
            "dest": "/app.js",
            "methods": [
                "GET"
            ]
        }
    ]
}